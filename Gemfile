source 'https://rubygems.org'


# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.2.5'
#Repository for collecting Locale data for Ruby on Rails I18n as well as other interesting, Rails related I18n stuff 
gem 'rails-i18n'
#Manage Procfile-based applications
gem 'foreman'
#Solução de autenticação flexível para Rails
gem 'devise'
#Translations for the devise gem
gem 'devise-i18n'
#Rails gem do tema de administração baseado no Bootstrap SB Admin 2.
gem 'bootstrap_sb_admin_base_v2'
#jQuery UI para o pipeline de ativos do Rails
gem 'jquery-ui-rails'
# The safe Markdown parser, reloaded.
gem 'redcarpet'
#FriendlyId is the “Swiss Army bulldozer” of slugging and permalink plugins for ActiveRecord
gem 'friendly_id'
#Se Turbolinks não são suficientes para você. O Wiselinks torna seu aplicativo mais rápido.
gem 'wiselinks'
#Um paginador baseado em Scope & Engine, limpo, poderoso, personalizável e sofisticado para o Ruby webapps 
gem 'kaminari'
#Traduções para the kaminari gem
gem 'kaminari-i18n'
#Um Ruby Gem que envolve a funcionalidade da biblioteca jQuery Raty e fornece classificação de estilo IMDB opcional.
gem 'ratyrate'
# Ruby interface to the GraphViz graphing tool 
gem 'ruby-graphviz'
#A library for generating fake data such as names, addresses, and phone numbers.
gem 'faker'
#Markdown Lorem Ipsum gerador
gem 'doctor_ipsum'
#O Lero-lero Generator é uma ferramenta capaz de gerar frases que 'falam' muita coisa mas que não tem conteúdo algum.
gem 'lerolero_generator'

source 'https://rails-assets.org' do
#Bootbox
gem 'rails-assets-bootbox'
#Bootstrap
gem 'rails-assets-bootstrap', '3.3.7'
# Bootstrap Mardown
gem 'rails-assets-bootstrap-markdown'
# Bootstrap Notify
gem 'rails-assets-bootstrap.growl'
#Um invólucro acessível para a API de Notificações da Web
gem 'rails-assets-notifyjs'
#Animate.css
gem 'rails-assets-animate.css'
# Marked
gem 'rails-assets-marked'
end

#Minimal authorization through OO design and pure Ruby classes
gem 'pundit'
#Integration of RubyMoney - Money with Rails
gem 'money-rails'
#Gerenciamento fácil de anexos de arquivos para o ActiveRecord
gem  'paperclip',  '~> 5.0.0' 
#Help ActiveRecord::Enum feature to work fine with I18n and simple_form.
gem 'enum_help'
# Use sqlite3 as the database for Active Record
gem 'sqlite3'
# Use SCSS for stylesheets
gem 'sass-rails', '~> 5.0'
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'
# Use CoffeeScript for .coffee assets and views
gem 'coffee-rails', '~> 4.1.0'
# See https://github.com/rails/execjs#readme for more supported runtimes
# gem 'therubyracer', platforms: :ruby

# Use jquery as the JavaScript library
gem 'jquery-rails'
# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 2.0'
# bundle exec rake doc:rails generates the API under doc/api.
gem 'sdoc', '~> 0.4.0', group: :doc

# Use ActiveModel has_secure_password
# gem 'bcrypt', '~> 3.1.7'''
# Use Capistrano for deployment
# gem 'capistrano-rails', group: :development

group :development, :test do
  #Página de erro melhor para aplicativos de rack
  gem 'better_errors'
  #Generate Entity-Relationship Diagrams for Rails applications 
  gem 'rails-erd'

  gem 'binding_of_caller'
  # Call 'byebug' anywhere in the code to stop execution and get a debugger console
  gem 'byebug'
  
  
end

group :development do
  #Catches mail and serves it through a dream.
  gem 'mailcatcher'
  # Access an IRB console on exception pages or by using <%= console %> in views
  gem 'web-console', '~> 2.0'
  # Ferramenta remota de automação multi-servidor
  gem 'capistrano', '~> 3.7'
  # Suporte Bundler para Capistrano 3.x
  gem 'capistrano-bundler', '~> 1.2'
  # Tarefas específicas do Ruby on Rails para Capistrano
  gem 'capistrano-rails', '~> 1.2'
  # Spring speeds up development by keeping your application running in the background. Read more: https://github.com/rails/spring
  gem 'spring'
  #RVM support for Capistrano v3:
  gem 'capistrano-rvm'
 #Unicorn for Capistrano v3:
  gem 'capistrano3-unicorn'

end

group :production do
  
  # MySQL Adapter
  gem 'mysql2','~> 0.3.18'
  # Use Unicorn as the app server
  gem 'unicorn'
  #Mailgun's Official Ruby Library
  gem 'mailgun-ruby', '~>1.1.6'
end

